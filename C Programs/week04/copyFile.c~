#include <stdio.h>
#include <stdlib.h>

int main()
{
  char c;
  FILE *from, *to;

  from = fopen("file.txt", "r");
  if (from == NULL)
  {
    perror("file.txt");
    exit(1);
  }
  
  to = fopen("copy.txt", "w");
  if (to == NULL)
    {
      perror("Cannot write to the file because it does not exist");
      exit(1);
    }
  do
    {
      c = getc(from);
      putc(c, to);
    }
  while(c != EOF);
  /* file exists, so start reading */
  

  fcloseall();
  exit(0);
}
